# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Source code - force LF
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.md text eol=lf
*.mdx text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.svg text eol=lf

# Config files
*.config text eol=lf
*.conf text eol=lf
*.env text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf
.prettierrc text eol=lf
.eslintrc text eol=lf

# Shell scripts - must use LF
*.sh text eol=lf

# Windows batch scripts - keep CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files - don't touch
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.webp binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary

# Lock files - treat as binary for cleaner diffs
package-lock.json binary -diff

# Ignore whitespace changes in diffs for specific files
*.md diff=markdown
*.css diff=css
*.html diff=html

# Linguist settings for GitHub stats
*.css linguist-vendored=false
*.js linguist-vendored=false

